<Page x:Class="Musical_Course.Pages.UsersPage.PrintManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Musical_Course.Pages.UsersPage"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="PrintManagerPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DocumentViewer x:Name="documentViewer">
            <FixedDocument>
                <PageContent>
                    <FixedPage>
                        <Grid Margin="20" Width="770" Height="1010">
                            <Grid Margin="0, 0, 0, 800" Width="770" Height="50" Background="Black">
                                <TextBlock Margin="5" Text="Группа" FontSize="26" Foreground="White"/>
                            </Grid>
                            <Grid Margin="10, 70, 10, 0" Width="795" Height="400">
                                <TextBlock Text="Название:" Margin="0, -150, 590, 0" Width="200" FontSize="26"></TextBlock>
                                <TextBlock Text="Фамилия:" Margin="0, -110, 590, 0" Width="200" FontSize="26"></TextBlock>
                                <TextBlock Text="Имя:" Margin="0, -70, 590, 0" Width="200" FontSize="26"></TextBlock>
                                <TextBlock Text="Телефон:" Margin="0, -30, 590, 0" Width="210" FontSize="26"></TextBlock>
                                <TextBlock Text="Почта:" Margin="0, 10, 590, 0" Width="200" FontSize="26"></TextBlock>
                                <TextBlock Text="Арена:" Margin="0, 50, 590, 0" Width="200" FontSize="26"></TextBlock>
                                <TextBlock Text="Описание:" Margin="0, 250, 590, 0" Width="200" FontSize="26"></TextBlock>
                                

                                <TextBlock Text="{Binding Groups.Name}" Margin="0, -150, 90, 0" Width="400" FontSize="26"></TextBlock>
                                <TextBlock Text="{Binding Users.Surname}" Margin="0, -110, 90, 0" Width="400" FontSize="26"></TextBlock>
                                <TextBlock Text="{Binding Users.Name}" Margin="0, -70, 90, 0" Width="400" FontSize="26"></TextBlock>
                                <TextBlock Text="{Binding Users.Phone}" Margin="0, -30, 90, 0" Width="400" FontSize="26"></TextBlock>
                                <TextBlock Text="{Binding Users.Mail}" Margin="0, 10, 90, 0" Width="400" FontSize="26"></TextBlock>
                                <TextBlock Text="{Binding Groups.DescriptionAreas}" TextWrapping="Wrap" Margin="0, 90, 50, 0" FontSize="20"></TextBlock>
                                <TextBlock Text="{Binding Groups.Description}" TextWrapping="Wrap" Margin="0, 290, 50, -500" FontSize="20"></TextBlock>
                            </Grid>
                        </Grid>
                    </FixedPage>
                </PageContent>
            </FixedDocument>
        </DocumentViewer>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="Вернуться назад" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Page>
