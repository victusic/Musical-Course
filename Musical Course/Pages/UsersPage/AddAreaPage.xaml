<Page x:Class="Musical_Course.Pages.UsersPage.AddAreaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Musical_Course.Pages.UsersPage"
      mc:Ignorable="d" Background="Gray"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="AddAreaPage">
    <Grid>
        <Image Source="/Musical Course;component/Resources/AreaIconSmall3.png"></Image>
        <TextBlock x:Name="HelloText4" Foreground ="White" FontSize="42"
                   FontFamily="Arial" HorizontalAlignment="Center"
                   Margin="0, 60, 0, 20" Text="Добавить площадку"/>
        <TextBlock Foreground ="White" Text="Название:" FontSize="18"
                   FontFamily="Arial" Height="22" Margin="0,0,714,502" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="86" />
        <TextBox Background="#00DDDDDD" BorderBrush="White" Text="{Binding Name}"
                 BorderThickness="3" Foreground="White" FontFamily="Arial" FontSize="42"
                 Margin="571,0,557,496" Name="AddBox_Name" Height="34" VerticalAlignment="Bottom"/>
        <TextBlock Foreground ="White" Text="Город:" FontSize="18"
                   FontFamily="Arial" Height="22" Margin="0,0,714,462" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="56" />
        <TextBox Background="#00DDDDDD" BorderBrush="White" Text="{Binding Town}"
                 BorderThickness="3" Foreground="White" FontFamily="Arial" FontSize="42"
                 Margin="0,229,557,0" Name="AddBox_Prod" HorizontalAlignment="Right" Width="152" Height="34" VerticalAlignment="Top"/>
        <TextBlock Foreground ="White" Text="Описание:" FontSize="18"
                   FontFamily="Arial" Height="22" Margin="0,0,714,364" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="86" />
        <TextBox Background="#00DDDDDD" BorderBrush="White" Text="{Binding Description}"
            BorderThickness="3" Foreground="White" FontFamily="Arial" FontSize="42"
            Margin="0,327,557,0" x:Name="AddBox_Work" HorizontalAlignment="Right" Width="152" Height="34" VerticalAlignment="Top"/>
        <Button Background="#00DDDDDD" BorderBrush="White"
                BorderThickness="3" Content="Добавить"
                Foreground="White" FontFamily="Arial" FontSize="26"
                Name="BtnAdd" Click="BtnAdd_Click" Margin="480,0,0,46" Height="53" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="151"/>
        <Button Background="#00DDDDDD" BorderBrush="White"
                BorderThickness="3" Content="Назад"
                Foreground="White" FontFamily="Arial" FontSize="26"
                Name="BtnGoBack" Click="BtnGoBack_Click" Height="53" Margin="0,0,478,46" VerticalAlignment="Bottom"  HorizontalAlignment="Right" Width="151"/>
    </Grid>
</Page>
