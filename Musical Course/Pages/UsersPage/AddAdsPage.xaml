<Page x:Class="Musical_Course.Pages.UsersPage.AddAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Musical_Course.Pages.UsersPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAdsPage">

    <Grid>
        <Image Source="/Musical Course;component/Resources/IconReg_Background.jpg" 
               Stretch="UniformToFill" Panel.ZIndex="-1000"></Image>
        <TextBlock x:Name="HelloText4" Foreground ="White" FontSize="42"
                   FontFamily="Arial" HorizontalAlignment="Center"
                   Margin="0, 0, 0, 20"><Run Text="Добавить"/><Run Text=" объявление"/></TextBlock>
        <TextBlock Foreground ="White" Text="Тип:" FontSize="18"
                   FontFamily="Arial" Height="22" Margin="0,0,450,300" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="37" />
        <TextBox Background="#00DDDDDD" BorderBrush="White"
                 BorderThickness="3" Foreground="White" FontFamily="Arial" FontSize="42"
                 Margin="0,122,293,0" Name="AddBoxType_Name" HorizontalAlignment="Right" Width="152" Height="34" VerticalAlignment="Top"/>
        <TextBlock Foreground ="White" Text="Автор: " FontSize="18"
                   FontFamily="Arial" Height="21" Margin="0,0,450,339" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="55" />
        <TextBox Background="#00DDDDDD" BorderBrush="White"
                 BorderThickness="3" Foreground="White" FontFamily="Arial" FontSize="42"
                 Margin="0,83,293,0" Name="AddBox_Prod" HorizontalAlignment="Right" Width="152" Height="34" VerticalAlignment="Top"/>

        <Button Background="#00DDDDDD" BorderBrush="White"
                BorderThickness="3" Content="Добавить"
                Foreground="White" FontFamily="Arial" FontSize="26"
                Name="BtnAdd" Click="BtnAdd_Click" Width="151" Margin="238,397,410,10"/>
        <Button Background="#00DDDDDD" BorderBrush="White"
                BorderThickness="3" Content="Назад"
                Foreground="White" FontFamily="Arial" FontSize="26"
                Name="BtnGoBack" Click="BtnGoBack_Click" Width="151" Margin="400,397,248,10"/>
        <TextBlock Foreground ="White" Text="Площадка:" FontSize="18"
            FontFamily="Arial" Height="22" Margin="0,0,445,261" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="96" />
        <TextBox Background="#00DDDDDD" BorderBrush="White"
            BorderThickness="3" Foreground="White" FontFamily="Arial" FontSize="42"
            Margin="0,161,293,0" x:Name="AddBoxPlace" HorizontalAlignment="Right" Width="152" Height="34" VerticalAlignment="Top"/>
        <TextBlock Foreground ="White" Text="Группа: " FontSize="18"
            FontFamily="Arial" Height="20" Margin="0,0,445,223" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="65" />
        <TextBox Background="#00DDDDDD" BorderBrush="White"
            BorderThickness="3" Foreground="White" FontFamily="Arial" FontSize="42"
            Margin="0,200,293,0" x:Name="AddBoxGroup" HorizontalAlignment="Right" Width="152" Height="34" VerticalAlignment="Top"/>
        <TextBlock Foreground ="White" Text="Модерация: " FontSize="18"
            FontFamily="Arial" Height="20" Margin="0,0,445,159" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="105" />
        <TextBox Background="#00DDDDDD" BorderBrush="White"
            BorderThickness="3" Foreground="White" FontFamily="Arial" FontSize="42"
            Margin="0,264,293,0" x:Name="AddBoxModer" HorizontalAlignment="Right" Width="152" Height="34" VerticalAlignment="Top"/>
    </Grid>
</Page>
