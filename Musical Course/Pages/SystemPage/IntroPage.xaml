<Page x:Class="Musical_Course.Pages.IntroPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Musical_Course.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="IntroPage">

    <Grid>
        <Image Source="/Musical Course;component/Resources/IntroBackground.jpg"/>
        <TextBlock Foreground ="White" Text="Musical Contract" FontSize="84"
                   FontFamily="Arial" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Margin="0, 0, 0, 280"></TextBlock>
        <Button Width="300" Height="60" Background="#00DDDDDD" BorderBrush="White"
                BorderThickness="3" Margin="0, 120, 310, 0" Content="Войти"
                Foreground="White" FontFamily="Arial" FontSize="42"
                Name="BtnGo" Click="BtnGo_Click"></Button>
        <Button Width="300" Height="60" Background="#00DDDDDD" BorderBrush="White"
                BorderThickness="3" Margin="310, 120, 0, 0" Content="О программе"
                Foreground="White" FontFamily="Arial" FontSize="42"
                Name="BtnAboutGo" Click="BtnAboutGo_Click"></Button>
    </Grid>
</Page>
